{% extends 'base.html.twig' %}

{% block title %}Vehicule{% endblock %}

{% block body %}
    <h1>Vehicule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicule.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ vehicule.titre }}</td>
            </tr>
            <tr>
                <th>Marque</th>
                <td>{{ vehicule.marque }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ vehicule.modele }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ vehicule.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ vehicule.photo }}" alt="" width="300"></td>
            </tr>
            <tr>
                <th>PrixJournalier</th>
                <td>{{ vehicule.prixJournalier }}</td>
            </tr>
            <tr>
                <th>DateEnregistrement</th>
