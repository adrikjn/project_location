{% extends "base.html.twig" %}

{% block title %}Admin | Formulaire Membre
{% endblock %}

{% block body %}
<div class="container">
	<h1 class="display-4 text-center my-4">

		{% if editMode %}
			BACKOFFICE | Edition du membre
		{% else %}
			BACKOFFICE | Création d'un membre
		{% endif %}

	</h1>

	{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

	{{ form_row(form.username, {
        label: 'Pseudo'
    }) }}
	{{ form_row(form.email) }}
	{{ form_row(form.plainPassword ) }}
	{{ form_row(form.civilite) }}
	{{ form_row(form.nom) }}
	{{ form_row(form.prenom) }}
	{{ form_row(form.roles) }}

	<button class="btn btn-primary my-2" type="submit">

		{% if editMode %}
			Enregistrer les modifications
		{% else %}
			Créer le membre
		{% endif %}

	</button>

	{{ form_end(form) }}
</div>

{% endblock %}
