{% extends "base.html.twig" %}

{% block body %}
<div class="container my-4">
<h1 class="text-center mb-4">Liste de vos commandes</h1>

<table class="table">
<thead>
    <tr>
        <th>Date de départ</th>
        <th>Date de fin</th>
        <th>Date de la commande</th>
        <th>Prix total</th>
        <th>Véhicule</th>
    </tr>
</thead>
<tbody>
{% for item in commandes %}
    <tr>
        <td>{{ item.dateHeureDepart|date('d/m/Y à H:i:s') }}</td>
        <td>{{ item.dateHeureFin|date('d/m/Y à H:i:s') }}</</td>
        <td>{{ item.dateEnregistrement|date('d/m/Y à H:i:s') }}</</td>
        <td>{{ item.prixTotal }}€</</td>
        <td>{{ item.vehicule.titre }}</</td>
    </tr>
{% endfor %}
</tbody>
</table>
</div>
{% endblock %}