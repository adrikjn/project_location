{% extends 'base.html.twig' %}

{% block title %}Admin commandes{% endblock %}

{% block body %}
<div class="container">
<h1 class="text-center">Admin commandes</h1>

	{# <a href="{{ path('admin_crud_commandes_new') }}" class="btn btn-success my-3">Ajouter une commande</a> #}

	<table class="table table-bordered text-center">
		<thead>
			<tr>
				{% for data in colonnes %}
					{% if data != "id" %}
						<th>{{ data }}</th>
					{% endif %}
				{% endfor %}
                <th>Membre</th>
                <th>Véhicule</th>
				<th>Editer / Supprimer</th>
			</tr>
		</thead>
		<tbody>
			{% for data in coms %}
				<tr>
					<td>{{ data.dateHeureDepart|date('d/m/Y à H:i:s') }}</td>
					<td>{{ data.dateHeureFin|date('d/m/Y à H:i:s') }}</td>
					<td>{{ data.prixTotal }}€</td>
					<td>{{ data.dateEnregistrement|date('d/m/Y à H:i:s') }}</td>
					<td>{{ data.membre.username }}</td>
					<td>{{ data.vehicule.titre }}</td>
					<td>
						<a href="{{ path('admin_crud_commandes_edit', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-edit fa-lg"></i>
						</a>

						<a onclick="return confirm('Voulez-vous supprimer cette commande ?')" href="{{ path('admin_crud_commandes_delete', {'id': data.id}) }}" class="text-dark">
							<i class="fas fa-trash-alt fa-lg"></i>
						</a>
					</td>
				</tr>
			{% endfor %}
		</tbody>

	</table>
</div>
{% endblock %}
