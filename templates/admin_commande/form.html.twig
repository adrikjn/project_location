{% extends "base.html.twig" %}

{% block title %}Admin | Formulaire commande
{% endblock %}

{% block body %} 
<div class="container">
	<h1 class="display-4 text-center my-4">

		{% if editMode %}
			BACKOFFICE | Edition de la commande
		{% else %}
			BACKOFFICE | Création d'une commande
		{% endif %}

	</h1>

	{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

	{{ form_row(form.dateHeureDepart) }}
	{{ form_row(form.dateHeureFin) }}
	{{ form_row(form.membre) }}
	{{ form_row(form.vehicule) }}

	<button class="btn btn-primary my-2" type="submit">

		{% if editMode %}
			Enregistrer les modifications
		{% else %}
			Créer la commande
		{% endif %}

	</button>

	{{ form_end(form) }}

</div>
{% endblock %}
